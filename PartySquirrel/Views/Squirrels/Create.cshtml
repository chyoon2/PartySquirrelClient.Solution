<link rel="stylesheet" href="~/css/navfont.css">

@using PartySquirrel.ViewModels;
@model CreateSquirrelViewModel;


<h1> Add Party Traits</h1>
<img src="@Model.Image"><br>

@using (Html.BeginForm("CreatePost", "Squirrels"))
{
  <div class="form-group"><br>
    @Html.Label("Name:")
    @Html.TextBoxFor(model => model.Name, new { @class="form-control", required = "required"})

    @Html.Label("Party Trick:")
    @Html.TextBoxFor(model => model.PartyTrick, new { @class="form-control", required = "required"})

    @Html.Label("Party Story:")
    @Html.TextBoxFor(model => model.PartyStory, new { @class="form-control" } )

    @Html.Label("Where will you find them at a Party?:")
    @Html.TextBoxFor(model => model.PartyLocation, new { @class="form-control" } )

    @Html.Label("Been Partying since:")
    @Html.TextBoxFor(model => model.PartySince, new { @type = "date", @class="form-control", required = "required"})

    @Html.HiddenFor(model => model.Image)
  </div>
  <input type="submit" value="Add Party Squirrel" class= "btn btn-secondary"/>
}