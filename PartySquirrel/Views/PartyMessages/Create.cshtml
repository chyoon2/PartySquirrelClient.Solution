@using PartySquirrel.ViewModels;
@model CreatePartyMessageViewModel;


<h1> Add Party Message</h1>

@using (Html.BeginForm("Create", "PartyMessages"))
{
  <div class="form-group">
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.UserFromId)
    @Html.Label("Message:")
    @Html.TextBoxFor(model => model.MessageBody, new { @class="form-control", required = "required"})
  </div>
  <input type="submit" value="Add Party Messsage" class= "btn btn-outline-dark"/>
}

@Html.ActionLink("Show all Parties", "Index", "Parties")